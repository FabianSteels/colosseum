# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                                @controllers.SiteController.index()
GET           /manage                          @controllers.SiteController.manage()
GET           /help                            @controllers.SiteController.help()

#Auth
GET           /login                           @controllers.SiteController.login()
POST          /login                           @controllers.SiteController.authenticate()
GET           /logout                          @controllers.SiteController.logout()

#Application
GET           /application                     @controllers.ApplicationController.list()
GET           /application/:id                 @controllers.ApplicationController.get(id: Long)
PUT           /application                     @controllers.ApplicationController.create()
POST          /application/:id                 @controllers.ApplicationController.update(id: Long)
DELETE        /application/:id                 @controllers.ApplicationController.delete(id: Long)

#ApplicationComponent
GET           /applicationComponent            @controllers.ApplicationComponentController.list()
GET           /applicationComponent/:id        @controllers.ApplicationComponentController.get(id: Long)
PUT           /applicationComponent            @controllers.ApplicationComponentController.create()
POST          /applicationComponent/:id        @controllers.ApplicationComponentController.update(id: Long)
DELETE        /applicationComponent/:id        @controllers.ApplicationComponentController.delete(id: Long)


#Cloud
GET           /cloud/index                     @controllers.CloudController.index()
